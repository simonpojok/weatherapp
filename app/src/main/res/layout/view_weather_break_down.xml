<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_weather_break_down_min_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="19"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/view_weather_break_down_min_temperature_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_weather_break_down_min_label"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/view_weather_break_down_min_temperature"
        app:layout_constraintStart_toStartOf="@id/view_weather_break_down_min_temperature"
        app:layout_constraintTop_toBottomOf="@id/view_weather_break_down_min_temperature"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/view_weather_break_down_current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/view_weather_break_down_max_temperature"
        app:layout_constraintStart_toEndOf="@id/view_weather_break_down_min_temperature"
        app:layout_constraintTop_toTopOf="@id/view_weather_break_down_min_temperature"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/view_weather_break_down_current_temperature_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_weather_break_down_current_label"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/view_weather_break_down_current_temperature"
        app:layout_constraintStart_toStartOf="@id/view_weather_break_down_current_temperature"
        app:layout_constraintTop_toBottomOf="@id/view_weather_break_down_current_temperature"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/view_weather_break_down_max_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="19"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_weather_break_down_min_temperature"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/view_weather_break_down_max_temperature_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_weather_break_down_max_label"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/view_weather_break_down_max_temperature"
        app:layout_constraintStart_toStartOf="@id/view_weather_break_down_max_temperature"
        app:layout_constraintTop_toBottomOf="@id/view_weather_break_down_max_temperature"
        tools:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_weather_break_down_min_temperature_label" />

</merge>
